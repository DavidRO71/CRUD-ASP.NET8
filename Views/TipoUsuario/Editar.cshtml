@using CRUD_NET8.Models
@model TipoUsuario

<h1>Editar el tipo de usuario NÂº: @Model.TusuId</h1>
<hr>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="TipoUsuario" asp-action="Editar" method="post">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TusuDesc" class="control-label"></label>
                <input asp-for="TusuDesc" class="form-control" />
                <span asp-validation-for="TusuDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TusuObs" class="control-label"></label>
                <textarea asp-for="TusuObs" class="form-control"></textarea>
                <span asp-validation-for="TusuObs" class="text-danger"></span>
            </div>
            <hr>
            
            <div class="d-flex justify-content-between" >
                <form asp-controller="TipoUsuario" asp-action="Editar" method="post">
                    <input type="hidden" name="TusuId" value="@Model.TusuId" />
                    <input type="submit" name="action" value="Editar" class="btn btn-primary" />
                </form>
                
                <!-- Formulario para Volver al lado del formulario Editar -->
                <form asp-controller="TipoUsuario" asp-action="Volver" method="post" >
                    <input type="submit" name="action" value="Volver" class="btn btn-warning" />
                </form>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
